generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusType {
  draft
  published
}

enum PostType {
  quote
  photo
  video
  text
  link
}

model Post {
  id             String    @id @default(uuid()) @map("id")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  userId         String    @map("user_id")
  publishDate    DateTime? @map("publish_date")
  type           PostType
  status         StatusType
  title          String?
  link           String?
  description    String?
  photoLink      String?   @map("photo_link")
  quoteText      String?   @map("quote_text")
  quoteAuthor    String?   @map("quote_author")
  announce       String?
  postText       String?   @map("post_text")
  videoLink      String?   @map("video_link")
  isReposted     Boolean?  @map("is_reposted")
  creatorUserId  String?   @map("creator_user_id")
  originalPostId String?   @map("original_post_id")
  comments       Comment[]
  likes          Like[]

  @@map("posts")
}

model Like {
  id        String   @id @default(uuid())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("likes")
}

model Comment {
  id           String         @id @default(uuid())
  message      String
  post         Post           @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId       String         @map("post_id")
  userId       String         @map("user_id")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  @@map("comments")
}
